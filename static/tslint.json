{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "interface-over-type-literal": false,
    "object-literal-sort-keys": false,
    "semicolon": [
      true,
      "always",
      "strict-bound-class-methods"
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-pascal-case",
      "allow-snake-case",
      "ban-keywords"
    ]
  }
}
